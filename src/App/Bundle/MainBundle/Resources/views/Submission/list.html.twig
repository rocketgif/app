{% extends 'AppMainBundle::layout.html.twig' %}

{% block main %}
    {% for submission in submissions %}
        <article>
            <figure>
                <figcaption>
                    {{ submission.title }}
                    {% if submission.author %}
                        <div class="author">by {{ submission.author }}</div>
                    {% endif %}
                </figcaption>
                <div class="gfyitem" data-id="{{ submission.gfycatKey }}" data-autoplay=false data-expand=true></div>
                <div>
                    <a href="{{ path('app_main_submission_validate', {'identifier': submission.identifier}) }}">Accept</a>
                    <a href="{{ path('app_main_submission_refuse', {'identifier': submission.identifier}) }}">Refuse</a>
                </div>
            </figure>
        </article>
    {% endfor %}
{% endblock %}
