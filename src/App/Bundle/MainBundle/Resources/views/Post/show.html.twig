{% extends 'AppMainBundle::layout.html.twig' %}

{% block title %}{{ post.title }} by {{ post.author }} - Rocketgif{% endblock %}

{% block main %}
    <article>
        <figure>
            <figcaption>
                {{ post.title }}
                {% if post.author %}
                    <div class="author">by {{ post.author }}</div>
                {% endif %}
            </figcaption>
            <div class="gfyitem" data-id="{{ post.gfycatKey }}" data-autoplay=false data-expand=true></div>
        </figure>
    </article>
{% endblock %}
